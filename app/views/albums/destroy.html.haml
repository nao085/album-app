.body
  .header
    .header__container
      .header__box
        = link_to root_path, class: "header__box--btn" do
          %i.fa.fa-book-open
        = link_to 'AlbumApp', root_path, class: "header__box--title"
      .header__items
        = link_to "#", class: "header__items--album--btn" do
          %i.fa.fa-book
        = link_to '投稿する', "", class: "header__items--album--btn--name", id: "js-modal-open"
        = render partial: "albums/form"
        = link_to "user_path(current_user)", class: "header__items--user--btn" do
          %i.fas.fa-user
        = link_to 'マイページ', user_path(current_user), class: "header__items--album--btn--name"
  .main__contents      
    .destroy__announce-box
      %P 削除が完了しました。
      = link_to "投稿一覧へ戻る", root_path, class: 'return-btn'

    