= render "albums/nav_bar"
%main.main__contents
  .post__contents
    .post__container
      .post__container--inner
        #album-turn
          - @album_images.each do |album|
            = image_tag(album.image.to_s, alt: "")
        %ul.move__page-box 
          %li.move__page-box--prevpage
            %span{id: "prevpage"}
              前のページ
          %li.move__page-box--nextpage
            %span{id: "nextpage"}
              次のページ
        %span.post__container--inner__text 投稿者
        = link_to "#{@album.user.name}","/users/#{@album.user_id}", class: "post__container--inner__post-author"